<UserControl x:Class="ComboBoxWithDefaultProj.ComboBoxWithDefault"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:local="clr-namespace:ComboBoxWithDefaultProj"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="CBWD" d:DesignHeight="50" d:DesignWidth="200"
             Language="{Binding Source={x:Static glob:CultureInfo.CurrentCulture}, Path=Name, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}}"
             mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding ElementName=CBWD, Path=Caption}" />
            <ComboBox x:Name="cb" Grid.Column="1" IsEditable="True"
                      ItemsSource="{Binding ElementName=CBWD, Path=Values}"
                      Text="{Binding ElementName=CBWD, Path=DoubleValue}" />
            <Button x:Name="Reset" Grid.Column="2" Click="Reset_Click"
                    Content="@" />
        </Grid>

    </StackPanel>
</UserControl>
